<?php $option_value = new Application_Model_Option_Value(); ?>
<?php $option_values = $option_value->findAll(null, 'position ASC'); ?>

<?php $option_folder = new Application_Model_Option(); ?>
<?php $option_folder->find(array('code' => 'folder')); ?>
<?php $option_folder_id = $option_folder->getOptionId(); ?>

<?php foreach($option_values as $key => $option) : ?>
    <?php if($option->getOptionId() == $option_folder_id) continue; ?>
    <li id="add_page_<?php echo $option->getId(); ?>" class="option_value" data-pos="<?php echo $option->getPosition(); ?>" <?php echo ($option->getFolderCategoryId()) ? 'style="display:none"' : '' ?>>
        <a href="<?php echo $this->getUrl('folder/application/addfeature'); ?>" class="add_feature details" rel="<?php echo $option->getId(); ?>">
            <img src="<?php echo $option->getIconUrl(); ?>" alt="<?php echo $option->getName(); ?>" title="<?php echo $option->getName(); ?>" width="50" height="50" class="block" />
            <span rel="<?php echo $option->getTabbarName(); ?>" id="tabbar_name_<?php echo $option->getId(); ?>"><?php echo $option->getShortTabbarName() ?></span>
            <input type="hidden" name="value_id" value="<?php echo $this->getValueId(); ?>" />
            <input type="hidden" name="option_id" value="<?php echo $option->getId(); ?>" />
            <input type="hidden" name="category_id" value="" class="option_value_category_id" />
            <?php /*<input type="hidden" name="category_id" value="<?php echo $this->getCategory()->getCategoryId(); ?>"/>*/ ?>
        </a>
    </li>
<?php endforeach; ?>
<div class="clear"></div>